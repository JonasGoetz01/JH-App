<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page">Getränk buchen</li>
  </ol>
</nav>

{{#if rows}}
    <button type="button" class="btn btn-primary btn-lg" style="height: 200px; width: 200px; margin-bottom: 5px;" onclick="window.location.href='/overview/{{rows.[0].user_id}}'"><p style="font-size: 30px;">Übersicht</p></button>
{{/if}}

{{#each rows}}
    <button type="button" class="btn btn-primary btn-lg" style="height: 200px; width: 200px; margin-bottom: 5px;" onclick="window.location.href='/makesale/{{this.user_id}}/{{this.id}}'"><p class="drink">{{this.name}},
        {{this.brand}}
        ({{this.price_buy}}€)</p>
        <h2>#{{this.id}}</h2></button>
{{/each}}